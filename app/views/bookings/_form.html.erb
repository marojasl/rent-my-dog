<%= simple_form_for [dog, booking], html: { data: { dates: dates }} do |f| %>

  <div class="booking-details">
    <div class="form-inputs">
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    </div>

    <div class="form-inputs">
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    </div>

    <div class="form-inputs">
      <%= f.input :comment %>
    </div>
  </div>
  <br>
  <div class="pay-button">
    <div class="form-actions btn btn-treehouse">
      <%= f.button :submit, 'Proceed to pay' %>
    </div>
  </div>
<% end %>
