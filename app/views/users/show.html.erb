<div class="container">

  <div class="d-flex">
    <h1>Welcome, <%= @user.first_name.capitalize %>!</h1>
    <%= link_to edit_user_registration_path do %>
      <p> Edit profile <i class="fas fa-edit"></i></p>
    <% end %>
  </div>

  <% if @user == current_user %>
    <h3 class='text-center'>Your dog listings:</h3>
  <% else %>
    <h3 class='text-center'><%= @user.first_name %>'s dog listings:</h3>
  <% end %>

  <div class="cards">
        <% @user.dogs.each do |dog| %>
          <div class="card-dog m-3">
            <%= link_to dog_path(dog), class:"dog-card-link" do %>
              <div class="photo-dog" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(dog.photo.url) %>')">
              </div>
              <div class="card-dog-infos">
                <div >
                  <h1 class="name-dog"><%= dog.name %></h1>
                  <p><%= dog.description %></p>
                </div>

                <h2 class="card-dog-pricing"><%= dog.rate %>Â£</h2>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
  <% if @user == current_user %>
    <h3 class='text-center'>Bookings for my dogs:</h3>
  <% else %>
    <h3 class='text-center'><%= @user.first_name %>'s dogs' bookings:</h3>
  <% end %>
  <% @bookings_for_user.each do |booking| %>
    <div class="card-booking">
      <p><strong>Booking by: </strong><%= booking.user.first_name %></p>
      <p><strong>Booking for: </strong><%= booking.dog.name %></p>
      <p><strong>Start Date: </strong><%= booking.start_date %></p>
      <p><strong>End Date:</strong><%= booking.end_date %></p>
      <p><strong>Comment: </strong><%= booking.comment%></p>
      <%= link_to booking_path(booking), method: :delete,data: { confirm: "Are you sure you want to delete this booking?" } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
    </div>
  <% end %>



  <% if @user == current_user %>
    <h3 class='text-center'>My bookings for other dogs:</h3>
    <% @bookings_by_user.each do |booking| %>
      <div class="card-booking">
        <p><strong>Booking for: </strong><%= booking.dog.name %></p>
        <p><strong>Start Date: </strong><%= booking.start_date %></p>
        <p><strong>End Date:</strong><%= booking.end_date %></p>
        <p><strong>Comment: </strong><%= booking.comment%></p>
        <%= link_to booking_path(booking), method: :delete,data: { confirm: "Are you sure you want to delete this booking?" } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
      </div>
    <% end %>
  <% end %>
  <%= link_to "Back to homepage", root_path %>
</div>

